<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:gravity="center_vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:id="@+id/tv_alarm_time"
        android:textAlignment="center"
        android:textSize="26sp"
        android:fontFamily="@font/cousine"
        android:text="20;00PM"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/DayTextView"
        android:text="M"
        android:id="@+id/tv_a_mon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/DayTextView"
        android:text="T"
        android:id="@+id/tv_a_tue"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/DayTextView"
        android:text="W"
        android:id="@+id/tv_a_wed"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/DayTextView"
        android:text="T"
        android:id="@+id/tv_a_thu"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/DayTextView"
        android:text="F"
        android:id="@+id/tv_a_fri"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/DayTextView"
        android:id="@+id/tv_a_sat"
        android:text="S"
        tools:ignore="Suspicious0dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/DayTextView"
        android:text="S"
        android:id="@+id/tv_a_sun"/>

</LinearLayout>