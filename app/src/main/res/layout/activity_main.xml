<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg_main_activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="8dp"
        android:id="@+id/constraint_main">
        <View
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:id="@+id/round_clock_image"
            app:layout_constraintBottom_toBottomOf="@+id/clock_container"
            app:layout_constraintEnd_toEndOf="@+id/clock_container"
            app:layout_constraintStart_toStartOf="@+id/clock_container"
            app:layout_constraintTop_toTopOf="@+id/clock_container"
            android:contentDescription="@string/app_name"
            android:background="@drawable/round_clock"


            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_overflow"
            android:contentDescription="@string/about"
            android:onClick="showPopup" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/switch_am_pm"
            android:background="@drawable/rounded_rectangle"
            android:text="@string/am_pm"
            android:textOn="@string/time_am"
            android:textOff="@string/time_pm"
            android:checked="true"
            android:padding="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="12dp"
            />
        <ImageButton
            app:layout_constraintCircle="@id/clock_container"
            app:layout_constraintCircleRadius="140dp"
            app:layout_constraintCircleAngle="30"
            android:src="@drawable/pig"
            android:id="@+id/ib_time_1"
            style="@style/AnimalImageButton"
            tools:ignore="MissingConstraints"
            android:contentDescription="@string/animal_icon"/>
        <ImageButton
            app:layout_constraintCircle="@id/clock_container"
            app:layout_constraintCircleRadius="140dp"
            app:layout_constraintCircleAngle="60"
            android:src="@drawable/beaver"
            android:id="@+id/ib_time_2"
            style="@style/AnimalImageButton"
            tools:ignore="MissingConstraints"
            android:contentDescription="@string/animal_icon"/>
        <ImageButton
            app:layout_constraintCircle="@id/clock_container"
            app:layout_constraintCircleRadius="140dp"
            app:layout_constraintCircleAngle="90"
            android:src="@drawable/zebra"
            android:id="@+id/ib_time_3"
            style="@style/AnimalImageButton"
            tools:ignore="MissingConstraints"
            android:contentDescription="@string/animal_icon"/>
        <ImageButton
            app:layout_constraintCircle="@id/clock_container"
            app:layout_constraintCircleRadius="140dp"
            app:layout_constraintCircleAngle="0"
            android:src="@drawable/cow"
            android:id="@+id/ib_time_12"
            style="@style/AnimalImageButton"
            tools:ignore="MissingConstraints"
            android:contentDescription="@string/animal_icon"/>
        <ImageButton
            app:layout_constraintCircle="@id/clock_container"
            app:layout_constraintCircleRadius="140dp"
            app:layout_constraintCircleAngle="120"
            android:src="@drawable/dog"
            android:id="@+id/ib_time_4"
            style="@style/AnimalImageButton"
            tools:ignore="MissingConstraints"
            android:contentDescription="@string/animal_icon"/>
        <ImageButton
            app:layout_constraintCircle="@id/clock_container"
            app:layout_constraintCircleRadius="140dp"
            app:layout_constraintCircleAngle="150"
            android:src="@drawable/donkey"
            android:id="@+id/ib_time_5"
            style="@style/AnimalImageButton"
            tools:ignore="MissingConstraints"
            android:contentDescription="@string/animal_icon"/>
        <ImageButton
            app:layout_constraintCircle="@id/clock_container"
            app:layout_constraintCircleRadius="140dp"
            app:layout_constraintCircleAngle="180"
            android:src="@drawable/duck"
            android:id="@+id/ib_time_6"
            style="@style/AnimalImageButton"
            tools:ignore="MissingConstraints"
            android:contentDescription="@string/animal_icon"/>
        <ImageButton
            app:layout_constraintCircle="@id/clock_container"
            app:layout_constraintCircleRadius="140dp"
            app:layout_constraintCircleAngle="210"
            android:src="@drawable/lion"
            android:id="@+id/ib_time_7"
            style="@style/AnimalImageButton"
            tools:ignore="MissingConstraints"
            android:contentDescription="@string/animal_icon"/>
        <ImageButton
            app:layout_constraintCircle="@id/clock_container"
            app:layout_constraintCircleRadius="140dp"
            app:layout_constraintCircleAngle="240"
            android:src="@drawable/elephant"
            android:id="@+id/ib_time_8"
            style="@style/AnimalImageButton"
            tools:ignore="MissingConstraints"
            android:contentDescription="@string/animal_icon"/>
        <ImageButton
            app:layout_constraintCircle="@id/clock_container"
            app:layout_constraintCircleRadius="140dp"
            app:layout_constraintCircleAngle="270"
            android:src="@drawable/monkey"
            android:id="@+id/ib_time_9"
            style="@style/AnimalImageButton"
            tools:ignore="MissingConstraints"
            android:contentDescription="@string/animal_icon"/>
        <ImageButton
            app:layout_constraintCircle="@id/clock_container"
            app:layout_constraintCircleRadius="140dp"
            app:layout_constraintCircleAngle="300"
            android:src="@drawable/polarbear"
            android:id="@+id/ib_time_10"
            style="@style/AnimalImageButton"
            tools:ignore="MissingConstraints"
            android:contentDescription="@string/animal_icon"/>
        <ImageButton
            app:layout_constraintCircle="@id/clock_container"
            app:layout_constraintCircleRadius="140dp"
            app:layout_constraintCircleAngle="330"
            android:src="@drawable/chicken"
            android:id="@+id/ib_time_11"
            style="@style/AnimalImageButton"
            tools:ignore="MissingConstraints"
            android:contentDescription="@string/animal_icon"/>
        <View
            android:layout_width="325dp"
            android:layout_height="325dp"
            android:id="@+id/clock_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:src="@drawable/hour_arrow"
            android:id="@+id/iv_hour"
            app:layout_constraintBottom_toBottomOf="@+id/clock_container"
            app:layout_constraintEnd_toEndOf="@+id/clock_container"
            app:layout_constraintStart_toStartOf="@+id/clock_container"
            app:layout_constraintTop_toTopOf="@+id/clock_container"
            android:contentDescription="@string/arrow"/>
        <ImageView
            android:id="@+id/iv_minute"
            android:src="@drawable/minute_arrow"
            android:layout_width="240dp"
            android:layout_height="240dp"
            app:layout_constraintBottom_toBottomOf="@+id/clock_container"
            app:layout_constraintEnd_toEndOf="@+id/clock_container"
            app:layout_constraintStart_toStartOf="@+id/clock_container"
            app:layout_constraintTop_toTopOf="@+id/clock_container"
            android:contentDescription="@string/arrow"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@android:color/transparent"
            android:id="@+id/about_container"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_buttons"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_mon"
            style="@style/DayButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/mon" />
        <Button
            android:id="@+id/btn_tue"
            style="@style/DayButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tue" />
        <Button
            android:id="@+id/btn_wed"
            style="@style/DayButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/wed" />
        <Button
            android:id="@+id/btn_thu"
            style="@style/DayButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/thu" />
        <Button
            android:id="@+id/btn_fri"
            style="@style/DayButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/fri" />
        <Button
            android:id="@+id/btn_sat"
            style="@style/DayButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sat" />
        <Button
            android:id="@+id/btn_sun"
            style="@style/DayButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sun" />

    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >

        <TextView
            android:id="@+id/tv_new_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangle"
            android:layout_gravity="center"
            android:fontFamily="@font/cousine"
            android:visibility="invisible"
            android:textSize="30sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:src="@drawable/vector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:layout_marginEnd="12dp"
            android:clickable="true"
            android:elevation="8dp"
            android:focusable="true"
            app:backgroundTint="@color/colorAccent"
            app:fabSize="normal" />



    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_view"/>


</LinearLayout>