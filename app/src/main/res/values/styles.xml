<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DayButton" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/cousine</item>
    </style>

    <style name="DayTextView" >
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/cousine</item>
    </style>
    <style name="AnimalImageButton">
        <item name="android:padding">0dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <string name="animal_icon">Animal icon</string>
</resources>
